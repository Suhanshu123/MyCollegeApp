<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bar_vcss</item>
        <item name="colorPrimaryDark">@color/dark_color</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="AboutTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bar_vcss</item>
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:textColorSecondary">#ffffff</item>
        <item name="colorPrimaryDark">@color/dark_color</item>
        <item name="colorAccent">#ffffff</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="ClubTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bar_vcss</item>
        <item name="colorPrimaryDark">@color/dark_color</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:textColorSecondary">#ffffff</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="Splash_Shot" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bar_vcss</item>
        <item name="colorPrimaryDark">#fff</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:textColorSecondary">#ffffff</item>
        <item name="android:textColor">#ffffff</item>
    </style>
</resources>
